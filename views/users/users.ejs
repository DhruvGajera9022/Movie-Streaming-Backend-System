<%- include("../includes/header.ejs") %>
  <%- include("../includes/sidebar.ejs") %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Users</h1>
            </div>
          </div>

          <!-- Main content -->
          <section class="content">
            <div class="container-fluid">
              <div class="row">
                <div class="col-12">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-row-reverse mb-3">
                        <a href="/user" class="btn btn-primary">Add</a>
                      </div>
                      <div class="table-responsive-sm">
                        <table id="userstable" class="table table-dark table-striped table-bordered table-hover">
                          <thead>
                            <tr>
                              <th>ID</th>
                              <th>Image</th>
                              <th>Full Name</th>
                              <th>Email</th>
                              <th>Number</th>
                              <th>Gender</th>
                              <th>Hobby</th>
                              <th>Role</th>
                              <th>Action</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% allData.forEach(data=> { %>
                              <tr>
                                <td>
                                  <%= data.id %>
                                </td>
                                <td>
                                  <img src="img/userImages/<%= data.image %>" height="40" width="40">
                                </td>
                                <td>
                                  <%= data.fullName %>
                                </td>
                                <td>
                                  <%= data.email %>
                                </td>
                                <td>
                                  <%= data.number %>
                                </td>
                                <td>
                                  <%= data.gender %>
                                </td>
                                <td>
                                  <%= data.hobbies %>
                                </td>
                                <td>
                                  <%= data.roleTitle %>
                                </td>
                                <td>
                                  <a href="/user/<%= data.id %>" class="text-success">
                                    <i class="fas fa-edit fa-lg mx-1"></i>
                                  </a>
                                  <form action="/user/delete/<%= data.id %>" method="POST" style="display: inline" onsubmit="return confirm('Are you sure?')">
                                    <button type="submit" style="background: none; border: none; cursor: pointer">
                                      <i class="fas fa-trash fa-lg mx-1" style="color: red"></i>
                                    </button>
                                  </form>
                                </td>
                              </tr>
                              <% }) %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
        <!-- /.container-fluid -->
      </div>
    </div>

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark"></aside>

    <%- include("../includes/footer.ejs") %>
      </body>

      </html>